<section style="margin-top: 70px;">
<ul class="breadcrumb">
  <li><a href="/">Home</a></li>
  <li>stockpage > {{categoryname}}</li>
</ul>

<hr class="section-line">
<div class="row">
  <div class="left">
    <h2>CATEGORY</h2>
    <ul id="myCategories">
      {{#if category}}
      {{#each category}}
      <li><a href="{{categoryname}}">{{categoryname}}</a><span data-id="{{categoryname}}" class="deleteIcon btn-delete-category"><a href=""><i class="fa fa-trash"></i></a></span></li>
      {{/each}}
      {{/if}}
    </ul>
    <div style="padding-left: 10px; margin-top: 3px;" class="add-category">
          <p><a href="" class="btn-create" id="add_Category">Add category</a></p>
          
          <section id="category_form_area">
              <form action="/createcategory" method="post" class="form-horizontal" role="form" id="categoryForm">
                <div class="form-group">
                    <input name="categoryname" type="text" class="form-control" id="categoryname" placeholder="Enter Category" required>
                </div>
                <div class="form-group">
                    <button class = "add-button" type="submit">Add</button>
                </div>
              </form>
              <p><a href="" class="btn-create" id="add_stock">Add Stock</a></p>



              <section id="stock_form_area">
                <form action="/poststock/{{categoryname}}" enctype="multipart/form-data" method="post" class="form-horizontal" role="form" id="stockForm">
                <div class="form-group">
                    <input type="file" name="file" class="form-control" id="file" required>
                </div>

                <div class="form-group">
                    <input name="name" type="text" class="form-control" id="name" placeholder="Product name" required>
                </div>

                <div class="form-group">
                    <textarea name="description" class="form-control" id="description" placeholder="Description" required></textarea>
                </div>

                <div class="form-group" style="margin-top: -10px;">
                  <h5 class="text-center" style="font-weight: bold;">wholesale price </h5>
                  <div class="col-sm-6">
                    <input name="wpminprice" type="text" class="form-control input-sm" id="wpminprice" placeholder="min">
                  </div>
                  <div class="col-sm-6">
                    <input name="wpmaxprice" type="text" class="form-control input-sm" id="wpmaxprice" placeholder="max">
                  </div>
                </div>

                <div class="form-group" style="margin-top: -8px;">
                  <h5 class="text-center" style="font-weight: bold;">Retail Price</h5>
                  <div class="col-sm-6">
                    <input name="rpminprice" type="text" class="form-control input-sm" id="rpminprice" placeholder="min" >
                  </div>
                  <div class="col-sm-6">
                    <input name="rpmaxprice" type="text" class="form-control input-sm" id="rpmaxprice" placeholder="max" >
                  </div>
                </div>

                <div class="form-group">
                    <button class = "add-stock-button" type="submit">Add</button>
                </div>
                </form>

              </section>
          </section>
      </div>
      <div class="imageAds">
        <img src="../public/images/rrrry.jpg" alt="">
      </div>
  </div>
  
  <div class="right" style="background-color:#fff;">
    <div>
      <h3 class="catname"></h3>
    </div>
    <h5 class="contact"><span><a href="/#contact3"></i> Contact us</a></span> to get current price or <span><a href="" class="btn-createModal">Get Quote</a></span></h5>
    <hr class="section-line2">
    <ul id="stock">
      {{#if stock}}
      {{#each stock}}
      <li>
        <img style="align-self: flex-start;" src="../public/upload/{{filename}}" alt="{{name}}" title="{{name}}" width="130px">
        <div class="about-product">
          <h4 class="productname">{{name}}</h4>
          <p class="description">{{description}}</p>
          <p class="availability">Availability: <span class="inStock">In Stock</p>
        </div>
        <div class="price">
          <p title="per 10kg" class= "wp">Wholesale price: <span class="min">&#8358;{{wpminprice}} - </span><span class="max">&#8358;{{wpmaxprice}}</span></p>
           <p class= "rp">Retail price: <span class="min">&#8358;{{rpminprice}} - </span><span class="max">&#8358;{{rpmaxprice}}</span></p>
           <button data-id="{{_id}}" class="btn-danger btn-delete-stock deleteIcon2"><a href="/"><i class="fa fa-trash" style="color: #ffffff;"></i></a></button>
        </div>
      </li>
      <hr class="section-line2">
      {{/each}}
      {{/if}}
    </ul>
  </div>
</div>
</section>











<section>
  <div style="font-family: Georgia, 'Times New Roman', Times, serif;" class="modal fade" id="deleteCategoryModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">Are you sure you want to delete this category?</h4>
          <h5 style="color: red;" class="modal-title">*Removing this category will also remove all the stocks in this category</h5>
        </div>
        <div class="modal-body">
          <h4> >{{categoryname}}< </h4>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal" id="btn-categorymodal-yes">Yes</button>
          <button type="button" class="btn btn-primary" data-dismiss="modal">No</button>
        </div>
      </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
</section>

<section>
  <div style="font-family: Georgia, 'Times New Roman', Times, serif;" id="deleteStockModal" class="modal fade">
    <div class="modal-dialog modal-confirm">
      <div class="modal-content">
        <div class="modal-header">
          <div class="icon-box">
            <i class="fa fa-remove"></i>
          </div>				
          <h4 class="modal-title">Are you sure?</h4>	
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        </div>
        <div class="modal-body">
          <p>Are you sure you want to delete this Stock? This process cannot be undone.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-info" data-dismiss="modal">Cancel</button>
          <button type="button" data-dismiss="modal" id="btn-stockmodal-yes"  class="btn btn-danger">Delete</button>
        </div>
      </div>
    </div>
  </div>     
</section>




<section>
  {{!-- Get quote Modal --}}
  <div class="modal" style="font-family: Georgia, 'Times New Roman', Times, serif;" id="quoteModal" tabindex="-1"
    role="dialog" aria-labelledby="myModalLabel2">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        ​
        <div class="modal-header text-left navbar-default">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
              aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel2">Get Quote</h4>
        </div>
        ​
        <div class="modal-body">
          <form method="post" action="/quote" class="form-horizontal" role="form" id="quoteForm">
            <div class="form-group">
              <div class="col-sm-12">
                <input name="name" type="input" class="form-control input" placeholder="Name">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <input name="phone" type="input" class="form-control input" placeholder="Phone number">
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-12">
                <input name="email" type="input" class="form-control input" placeholder="Email" required>
                <p class="text-left" style="font-size:11px;margin-top:5px;">&#42;Valid email address required</p>
              </div>
            </div>

            <div class="form-group">
              <div class="col-sm-7">
                <p class="text-left" style="font-size:12px;">How can we help you?</p>
                <textarea name="request" class="input" cols="78" type="input"
                  placeholder="I was wondering about availability and rates. I need help with the following:"></textarea>
              </div>
            </div>
            <div class="form-group text-right">
              <div class="col-sm-12">
                <button type="submit" class="submit-button">Submit</button>
              </div>
            </div>
          </form>
        </div>
        ​
      </div><!-- modal-content -->
    </div><!-- modal-dialog -->
  </div><!-- modal -->
</section>